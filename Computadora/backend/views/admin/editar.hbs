<div >
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Editar producto</h4>
            <form class="formulario" action="/admin/productos/editar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{producto.id}}" name="id">
              <div class="mb-3 row">
                 <input type="file" class="form-control" placeholder="Imagen" id="imagen" name="imagen" value="{{producto.imagen}}">
                  <p>
                    <label><input type="checkbox" name="imagen_delete" id="imagen_delete" value="1">Eliminar imagen actual?</label>
                     <input type="hidden" name="imagen_original" value="{{producto.imagen}}">
                  </p>
              </div>
              <div class="mb-3 row">
                   <textarea type="text" class="form-control" placeholder="Producto" name="producto">{{producto.producto}}</textarea>
              </div> 
              <div class="mb-3 row">
                   <textarea type="text" class="form-control" placeholder="Precio" name="precio">{{producto.precio}}</textarea>
              </div> 
              <div class="mb-3 row">
                   <textarea type="text" class="form-control" placeholder="Descuento" name="descuento">{{producto.descuento}}</textarea>
              </div> 
              <button type="submit" class="btn btn-primary">Editar</button>
            </form>
            {{#if error}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>
    